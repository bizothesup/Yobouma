            <solid android:color="@color/colorRed" />
            <corners android:radius="3dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed"/>
            <corners android:radius="3dp" />
